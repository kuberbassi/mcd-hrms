rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users - allow read/write for authenticated users (needed for role management)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // System Config - allow read/write for authenticated users (needed for HR settings)
    match /system/{docId} {
      allow read, write: if request.auth != null;
    }

    // Employees - logged in users can read/write
    match /employees/{docId} {
      allow read, write: if request.auth != null;
    }

    // Attendance - logged in users can read/write
    match /attendance/{docId} {
      allow read, write: if request.auth != null;
    }

    // Transfers - logged in users can read/write
    match /transfers/{docId} {
      allow read, write: if request.auth != null;
    }

    // Payroll - logged in users can read/write
    match /payroll/{docId} {
      allow read, write: if request.auth != null;
    }

    // Performance - logged in users can read/write
    match /performance/{docId} {
      allow read, write: if request.auth != null;
    }

    // Grievances - logged in users can read/write
    match /grievances/{docId} {
      allow read, write: if request.auth != null;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}